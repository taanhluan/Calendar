<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Content Calendar</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
    }

    header {
      background-color: #4CAF50;
      color: white;
      text-align: center;
      padding: 10px 0;
    }

    main {
      display: flex;
      justify-content: space-around;
      padding: 20px;
    }

    #calendar {
      width: 60%;
      background-color: white;
      border: 1px solid #ddd;
      padding: 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    #form-container {
      width: 30%;
      background-color: white;
      border: 1px solid #ddd;
      padding: 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    form label {
      display: block;
      margin: 10px 0 5px;
    }

    form input, form button {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button {
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }

    .event {
      margin-bottom: 10px;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      background-color: #f9f9f9;
    }

    .event button {
      background-color: #f44336;
      border: none;
      padding: 5px 10px;
      color: white;
      cursor: pointer;
      border-radius: 5px;
    }

    .event button:hover {
      background-color: #d32f2f;
    }
  </style>
</head>
<body>
  <header>
    <h1>Neptune WFH Calendar</h1>
  </header>
  
  <main>
    <!-- Calendar Section -->
    <div id="calendar"></div>

    <!-- Add WFH Schedule Form -->
    <div id="form-container">
      <h2>Add WFH Schedule</h2>
      <form id="schedule-form">
        <label for="name">Team Member:</label>
        <input type="text" id="name" placeholder="Enter name" required>
        
        <label for="date">Date:</label>
        <input type="date" id="date" required>
        
        <button type="submit">Add</button>
      </form>
    </div>
  </main>

  <footer>
    <p>&copy; 2025 Content Calendar App</p>
  </footer>

  <script>
    // JavaScript for managing the calendar and WFH schedules
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('schedule-form');
      const calendar = document.getElementById('calendar');

      // Array to store WFH events
      const events = [];

      // Add event listener to form
      form.addEventListener('submit', (e) => {
        e.preventDefault();

        // Get form values
        const name = document.getElementById('name').value;
        const date = document.getElementById('date').value;

        // Add event to the array
        events.push({ name, date });

        // Update calendar display
        renderCalendar();

        // Clear form inputs
        form.reset();
      });

      // Function to render calendar
      function renderCalendar() {
        calendar.innerHTML = '<h2>WFH Calendar</h2>';
        
        if (events.length === 0) {
          calendar.innerHTML += '<p>No WFH schedules added yet.</p>';
          return;
        }

        // Display each event
        events.forEach((event, index) => {
          const eventDiv = document.createElement('div');
          eventDiv.classList.add('event');
          eventDiv.innerHTML = `
            <p><strong>${event.date}</strong>: ${event.name}</p>
            <button onclick="deleteEvent(${index})">Delete</button>
          `;
          calendar.appendChild(eventDiv);
        });
      }

      // Function to delete an event
      window.deleteEvent = function (index) {
        events.splice(index, 1); // Remove event
        renderCalendar(); // Update calendar
      };

      // Initial render
      renderCalendar();
    });
  </script>
</body>
</html>
